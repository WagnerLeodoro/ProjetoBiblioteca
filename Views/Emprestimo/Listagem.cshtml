@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Biblioteca.Models.Emprestimo>
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Listagem de Empréstimos";
}
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" method="POST">
            <div class="form-group mb-2">
                <select name="TipoFiltro" class="form-control">
                    <option value="Usuario">Usuário</option>
                    <option value="Livro">Livro</option>
                </select>
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </form>
    </div>
</div>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Usuario</th>
                        <th>Data Empréstimo</th>
                        <th>Data Devolução</th>
                        <th>Livro</th>
                        <th>Autor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Emprestimo e in Model)
                    {
                        <tr>
                            <td>@e.Id</td>
                            <td>@e.NomeUsuario</td>
                            <td>@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                            <td>@e.DataDevolucao.ToString("dd/MM/yyyy")</td>
                            <td>@e.Livro.Titulo</td>
                            <td>@e.Livro.Autor</td>
                            <td><a href="/Emprestimo/Edicao/@e.Id">Editar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav class="col">
        <div class="row justify-content-between align-center">
            @Html.PagedListPager(Model, page => Url.Action("Listagem", new { pagina = page }))
            <span class="pull-right">
                Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
            </span>
        </div>
    </nav>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Opa!</h4>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <p>Não conseguimos encontrar resultados para o termo pesquisado</p>
        <hr>
        <p class="mb-0">Tente um outro termo</p>
    </div>
}
