@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Biblioteca.Models.Livro>
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Listagem de Livros";
}
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" method="POST">
            <div class="form-group mb-2">
                <select name="TipoFiltro" class="form-control">
                    <option value="Autor">Autor</option>
                    <option value="Titulo">Título</option>
                </select>
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
            </div>
            <a class="btn btn-primary mb-2" href="/Livro/Cadastro">Cadastrar Novo</a>
        </form>
    </div>
</div>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Ano</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Livro l in Model)
                    {
                        <tr>
                            <td>@l.Id</td>
                            <td>@l.Titulo</td>
                            <td>@l.Autor</td>
                            <td>@l.Ano</td>
                            <td><a href="/Livro/Edicao/@l.Id">Editar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav class="col">
        <div class="row justify-content-between align-center">
            @Html.PagedListPager(Model, page => Url.Action("Listagem", new { pagina = page }))
            <span class="pull-right">
                Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
            </span>
        </div>
    </nav>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Opa!</h4>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <p>Não conseguimos encontrar resultados para o termo pesquisado</p>
        <hr>
        <p class="mb-0">Tente um outro termo</p>
    </div>
}