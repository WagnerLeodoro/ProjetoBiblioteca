@model List<Usuario>

<h1>Usuários cadastrados</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if (u.Tipo == Usuario.admin)
                {
                    <td>Administrador</td>
                }
                else
                {
                    <td>Padrão</td>
                }
                @if (!(u.Tipo == Usuario.admin))
                {
                    <td><a href="Edicao?id=@u.Id">Editar</a></td>
                    <td><a href="Excluir?id=@u.Id">Excluir</a></td>
                }
                else
                {
                    <td></td>
                    <td></td>
                }

            </tr>
        }
    </tbody>
</table>

<a href="Cadastro">Registrar novo usuário</a>